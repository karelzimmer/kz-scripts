#!/usr/bin/env bash
# shellcheck source=kz_common.sh
###############################################################################
# SPDX-FileComment: Distribute website including kz packages
#
# SPDX-FileCopyrightText: Karel Zimmer <info@karelzimmer.nl>
# SPDX-License-Identifier: CC0-1.0
###############################################################################


###############################################################################
# Imports
###############################################################################

source kz_common.sh


###############################################################################
# Variables
###############################################################################

declare KZ_PROGRAM_NAME='kz-deploy'
declare KZ_PROGRAM_DESC
        KZ_PROGRAM_DESC=$(gettext 'Distribute website including kz packages')
declare KZ_DISPLAY_NAME=${KZ_PROGRAM_NAME/kz-/kz }

declare KZ_USAGE
        KZ_USAGE=$(eval_gettext "Usage: \$KZ_DISPLAY_NAME \$KZ_OPTIONS_USAGE")

declare KZ_HELP
        KZ_HELP="$(eval_gettext "Usage: \$KZ_DISPLAY_NAME [OPTION...]")

$KZ_PROGRAM_DESC.

$(gettext 'Options:')
$KZ_OPTIONS_HELP"

declare KZ_DOCS_REPO=$HOME/kz-deb
declare KZ_DOCS_REPO=$HOME/kz-docs
declare KZ_SCRIPTS_REPO=$HOME/kz-scripts
declare KZ_UPLOADS_REPO=$HOME/kz-uploads
declare KZ_UPLOADS_REPO_DISTDIR=$KZ_UPLOADS_REPO/dist


###############################################################################
# Functions
###############################################################################

# This function handles the script options and arguments.
function check_input() {
    local L_PARSED=''

    L_PARSED=$(
        getopt  --alternative                       \
                --options       "$KZ_OPTIONS_SHORT" \
                --longoptions   "$KZ_OPTIONS_LONG"  \
                --name          "$KZ_DISPLAY_NAME"  \
                --              "$@"
        )       || KZ_RC=$?
    if [[ $KZ_RC -ne $KZ_OK ]]; then
        infomsg "$KZ_USAGE"
        exit    $KZ_ERROR
    fi
    eval set -- "$L_PARSED"

    process_options   "$@"
    process_x_options "$@"
}


# This function handles the extra options and arguments.
function process_x_options() {
    while true; do
        case $1 in
            -- )
                shift
                break
                ;;
            * )
                shift
                ;;
        esac
    done

    if [[ -n $* ]]; then
        KZ_TEXT="$KZ_DISPLAY_NAME: $*: $(gettext 'arguments are not allowed')
$KZ_USAGE"
        infomsg "$KZ_TEXT"
        exit $KZ_ERROR
    fi

    if ! $KZ_DESKTOP_ENVIRONMENT; then
        KZ_TEXT="$KZ_DISPLAY_NAME: $(gettext "no desktop environment \
available")
$KZ_USAGE"
        infomsg "$KZ_TEXT"
        exit $KZ_ERROR
    fi
}


# This function processes the script options and arguments.
function process_input() {
    if ! $KZ_DEB; then
        KZ_TEXT=$(gettext 'Must run on a Debian or Debian-based system.')
        infomsg "$KZ_TEXT"
        exit $KZ_ERROR
    fi
    become_root_check || exit $KZ_OK
    build
    check
    deploy
}


# This function builds package kz and website.
function build() {
    KZ_TEXT=$(gettext 'Build website including kz packages')...
    infomsg "$KZ_TEXT"

    # Call kz build.
    logmsg 'Calling kz build...'
    "$KZ_SCRIPTS_REPO/usr/bin"/kz build || exit $KZ_ERROR
    logmsg 'Called kz build.'
}


# This function performs checks.
function check() {
    check_repos
    check_scripts_and_website
}


# This function performs the deploy.
function deploy() {
    upload_website
    install_package
}


# This function check that the repos are in the desired state.
function check_repos() {
    local L_ERROR_FLAG=false

    KZ_TEXT=$(gettext 'Check that all repos are on branch main')...
    infomsg "$KZ_TEXT"

    for REPO in $KZ_DOCS_REPO $KZ_DOCS_REPO $KZ_SCRIPTS_REPO $KZ_UPLOADS_REPO
    do
        cd "$REPO"
        if [[ $(git branch --show-current) != 'main' ]]; then
            KZ_TEXT=$(gettext "Repo \$REPO not on branch main.")
            errormsg "$KZ_TEXT"
            git status
            L_ERROR_FLAG=true
        fi
    done

    KZ_TEXT=$(gettext 'Check that all repos are clean')...
    infomsg "$KZ_TEXT"

    for REPO in $KZ_DOCS_REPO $KZ_DOCS_REPO $KZ_SCRIPTS_REPO $KZ_UPLOADS_REPO
    do
        cd "$REPO"

        # Prevent false positives.
        git status |& $LOGCMD

        if ! git diff-index --quiet HEAD; then
            KZ_TEXT=$(eval_gettext "Repo \$REPO is not clean.")
            errormsg "$KZ_TEXT"
            git status
            L_ERROR_FLAG=true
        fi
    done

    if $L_ERROR_FLAG; then
        exit $KZ_ERROR
    fi
}

# This function check the scripts and website.
function check_scripts_and_website() {
    KZ_TEXT=$(gettext 'Check scripts and website')...
    infomsg "$KZ_TEXT"

    # Call kz check.
    logmsg 'Calling kz check...'
    "$KZ_SCRIPTS_REPO/usr/bin"/kz check || exit $KZ_ERROR
    logmsg 'Called kz check.'
}


# This function uploads the website.
function upload_website() {
    local L_FTP_SET='set ssl:verify-certificate no'
    local L_FTP_FROM=$KZ_UPLOADS_REPO_DISTDIR
    local L_FTP_TO=/httpdocs
    local L_FTP_OPTS='--reverse --delete --verbose'
    local L_FTP_CMD="mirror $L_FTP_OPTS $L_FTP_FROM $L_FTP_TO; exit"
    local L_FTP_HOST=server106.hosting2go.nl
    local L_FTP_USER=kzimmer
    local L_FTP_LOGIN=$HOME/.$L_FTP_HOST'.login'
    local L_PROMPT

    L_PROMPT="$(gettext 'Password for') ftp://$L_FTP_HOST': "
    KZ_TEXT=$(gettext 'Upload website')...
    infomsg "$KZ_TEXT"

    if [[ ! -f $L_FTP_LOGIN ]]; then
        read -rp "$L_PROMPT" < /dev/tty
        printf '%s' "$REPLY" > "$L_FTP_LOGIN"
        printf '\n'
        chmod --verbose 'u=rw,g=,o=' "$L_FTP_LOGIN" |& $LOGCMD
    fi

    if ! lftp   --user      "$L_FTP_USER"               \
                --password  "$(cat "$L_FTP_LOGIN")"     \
                -e          "$L_FTP_SET; $L_FTP_CMD"    \
                "$L_FTP_HOST"; then
        # Force entering the password next time.
        rm --verbose "$L_FTP_LOGIN"*
        KZ_TEXT=$(gettext 'Website upload failed.')
        errormsg "$KZ_TEXT"
        exit $KZ_ERROR
    fi
}


# This function installs package kz.
function install_package() {
    # Call kz-deb (via wget and bash as a regular user would do).
    KZ_TEXT=$(gettext 'Install package')...
    infomsg "$KZ_TEXT"

    logmsg 'Calling kz deb (via wget and bash)...'
    if ! wget --output-document=- karelzimmer.nl/getkz 2> >($LOGCMD) | bash
    then
        KZ_TEXT=$(gettext 'Install package kz failed.')
        errormsg "$KZ_TEXT"
        exit $KZ_ERROR
    fi
    logmsg 'Called kz deb (via wget and bash).'
}


# This function controls the termination of the script.
function term_script() {
    KZ_TEXT="${KZ_GREEN}$KZ_DISPLAY_NAME $(gettext 'finished')$KZ_NORMAL"
    infomsg "$KZ_TEXT"
    exit $KZ_OK
}


###############################################################################
# Main
###############################################################################

function main() {
    init_script "$@"
    check_input "$@"
    process_input
    term_script
}

main "$@"
