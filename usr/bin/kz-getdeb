#!/usr/bin/bash
# shellcheck shell=bash source=kz_common.sh disable=SC2155
###############################################################################
# Install kz package.
#
# Written by Karel Zimmer <info@karelzimmer.nl>, CC0 1.0 Universal
# <https://creativecommons.org/publicdomain/zero/1.0>, 2016-2024.
###############################################################################


###############################################################################
# Import
###############################################################################

if  ! source "$(dirname "$0")"/kz_common.sh 2> \
            >(systemd-cat --identifier=kz-getdeb --priority=debug); then
    printf  '%s\n' 'Download kz_common.sh...'
    declare temp_kz_common=$(mktemp -t "kz_common-XXXXXXXXXX.sh")
    declare kz_common_github_uri='https://raw.githubusercontent.com/karel'
            kz_common_github_uri+='zimmer/kz-scripts/main/usr/bin/kz_common.sh'
    wget    --output-document="$temp_kz_common" $kz_common_github_uri |&
            systemd-cat --identifier=kz-getdeb --priority=debug
    source  "$temp_kz_common" 2> \
            >(systemd-cat --identifier=kz-getdeb --priority=debug)
    rm      "$temp_kz_common" |&
            systemd-cat --identifier=kz-getdeb --priority=debug
fi


###############################################################################
# Constants
###############################################################################

readonly    PROGRAM_NAME='kz-getdeb'
readonly    PROGRAM_DESC=$(gettext 'Install kz package')
readonly    DISPLAY_NAME=${PROGRAM_NAME/kz-/kz }

readonly    USAGE=$(eval_gettext "Usage: \$DISPLAY_NAME \$OPTIONS_USAGE")
readonly    HELP="$(eval_gettext "Usage: \$DISPLAY_NAME [OPTION...]")

$PROGRAM_DESC.

$OPTIONS_HELP"


###############################################################################
# Variables
###############################################################################


###############################################################################
# Functions
###############################################################################

# This function handles the script options and arguments.
function check_input {
    local       parsed=''
    local   -i  parsed_rc=0

    parsed=$(
        getopt  --alternative                       \
                --options       "$OPTIONS_SHORT"    \
                --longoptions   "$OPTIONS_LONG"     \
                --name          "$DISPLAY_NAME"     \
                --              "$@"
        ) || parsed_rc=$?
    if [[ $parsed_rc -ne $OK ]]; then
        text=$USAGE_LINE
        msg_info "$text"
        exit $ERROR
    fi
    eval set -- "$parsed"

    process_common_options "$@"

    while true; do
        case $1 in
            --)
                shift
                break
                ;;
            *)
                shift
                ;;
        esac
    done

    if [[ -n "$*" ]]; then
        text="$DISPLAY_NAME: $*: $(gettext 'arguments are not allowed')
$USAGE_LINE"
        msg_info "$text"
        exit $ERROR
    fi
}


# This function processes the script options and arguments.
function process_input {
    # shellcheck disable=SC2310
    if ! become_root_check; then
        return $OK
    fi
    install_package
}


# This function installs package kz.
function install_package {
    local   site_deb='https://karelzimmer.nl/assets/kz/kz_2.4.7_all.deb'
    local   temp_deb=$(mktemp -t "$PROGRAM_NAME-XXXXXXXXXX.deb")

    text='Download kz.deb...'
    msg_info "$text"
    wget --output-document="$temp_deb" $site_deb |& $LOGCMD

    text='Install. kz.deb...'
    msg_info "$text"
    text='Installing package kz...'
    msg_log "$text"
    # Prevent "N: ... user '_apt'. - pkgAcquire::Run (13: Permission denied)".
    chmod o+r "$temp_deb" |& $LOGCMD
    check_for_active_updates
    sudo    DEBIAN_FRONTEND=noninteractive  \
            apt-get                         \
            install                         \
            --allow-downgrades              \
            --reinstall                     \
            --yes                           \
            "$temp_deb"                     |& $LOGCMD
    text='Installed package kz.'
    msg_log "$text"
}


# This function controls the termination of the script.
function term_script {
    # shellcheck disable=SC2034
    local   website_url='https://karelzimmer.nl'

    title=$(gettext 'Finished')
    text=$(eval_gettext "Package kz has been successfully installed.

Now follow the steps as described
in the Checklist installation.

Checklist installation can be found on
\$website_url, under Linux.")

    if [[ $EDITION = 'desktop' ]]; then
        text+="

$(gettext "Type 'exit' to close this window.")"
        clear -x
        TERM=ansi whiptail  --backtitle "$DISPLAY_NAME" \
                            --title     "$title"        \
                            --infobox   "$text"         \
                            15 47
    else
        msg_info "$text"
    fi
    rm --force "$HOME"/kz "$HOME"/kz.{1..99}
    exit $OK
}


###############################################################################
# Main Script
###############################################################################

function main {
    init_script "$@"
    check_input "$@"
    process_input
    term_script
}

main "$@"
