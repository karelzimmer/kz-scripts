#!/usr/bin/env bash
# shellcheck source=kz_common.sh
###############################################################################
# SPDX-FileComment: Run the kz-install command (wrapper script).
#
# SPDX-FileCopyrightText: Karel Zimmer <info@karelzimmer.nl>
# SPDX-License-Identifier: CC0-1.0
###############################################################################

case $1 in
    '' )
        text='kz-install-cmd <command>: no command specified'
        printf '%s\n' "$text"
        exit 0
        ;;
    -* )
        text='kz-install-cmd <command>: no options allowed'
        printf '%s\n' "$text"
        exit 0
        ;;
    * )
        # Use 'eval' to execute the command in the variable as a shell command.
        eval "$1"
        exit $?
        ;;
esac
