#!/usr/bin/bash
# shellcheck source=kz_common.sh
###############################################################################
# Execute IVP.
#
# Written by Karel Zimmer <info@karelzimmer.nl>, CC0 1.0 Universal
# <https://creativecommons.org/publicdomain/zero/1.0>, 2023.
###############################################################################

###############################################################################
# Import
###############################################################################

readonly PROGRAM_NAME='kz-ivp'
PROGRAM_PATH=$(cd "$(dirname "$(realpath "$0")")" && pwd)
readonly PROGRAM_PATH
source "$PROGRAM_PATH"/kz_common.sh 2> >(systemd-cat --identifie=$PROGRAM_NAME)


###############################################################################
# Constants
###############################################################################

PROGRAM_DESC=$(gettext 'Execute IVP')
readonly PROGRAM_DESC
readonly DISPLAY_NAME=${PROGRAM_NAME/kz-/kz }

USAGE=$(eval_gettext "Usage: \$DISPLAY_NAME \$OPTIONS_USAGE")
readonly USAGE
HELP="$(eval_gettext "Usage: \$DISPLAY_NAME [OPTION...]")

$PROGRAM_DESC.

$(gettext 'Options:')
$OPTIONS_HELP"
readonly HELP


###############################################################################
# Variables
###############################################################################

declare error_flag=false


###############################################################################
# Functions
###############################################################################

# This function handles the script options and arguments.
function check_input {
    local parsed=''

    parsed=$(
        getopt  --alternative                       \
                --options       "$OPTIONS_SHORT"    \
                --longoptions   "$OPTIONS_LONG"     \
                --name          "$DISPLAY_NAME"     \
                --              "$@"
        ) || ( printf '%s\n' "$USAGE_LINE"; exit $ERROR )
    eval set -- "$parsed"

    process_common_options "$@"

    while true; do
        case $1 in
            --)
                shift
                break
                ;;
            *)
                shift
                ;;
        esac
    done

    if [[ -n "$*" ]]; then
        printf  "$DISPLAY_NAME: $*: %s\n$USAGE_LINE\n" \
                "$(gettext 'arguments are not allowed')"
        exit $ERROR
    fi
}


# This function processes the script options and arguments.
function process_input {
    local dir=''
    local scriptname=''

    # Message catalogue (gettext).
    dir=/usr/share/locale/nl/LC_MESSAGES
    if ! [[ -e $dir/kz.mo ]]; then
        msg_error "$(eval_gettext "Message catalog \$dir/kz.mo not found.")"
    fi

    # Check all kz scripts.
    while read -r script; do
        scriptname=$(basename "$script")
        check_script
    done < <(
            find /usr/bin   \
            -name 'kz*'     \
            -type f         \
            -executable     \
            -print          |
            sort
            )
}


# This function checks the operation of the script and associated files.
function check_script {
    local gui='-''-''g''u''i'
    local root=' kz_common.''c''h''e''c''k''_''u''s''e''r''_''r''o''o''t'

    # Script.
    if ! "$scriptname" --version |& $logcmd; then
        msg_error "$(eval_gettext "Script \$scriptname returned an error.")"
        error_flag=true
    fi

    # Desktop file.
    if grep --quiet --regexp="$gui" "/usr/bin/$scriptname"; then
        dir=/usr/share/applications
        if ! [[ -e $dir/$scriptname.desktop ]]; then
            msg_error "$(eval_gettext "Desktop configuration file \
\$dir/\$scriptname.desktop not found.")"
            error_flag=true
        fi
    fi

    # PolicyKit action definition file.
    if grep --quiet --regexp="$root" "/usr/bin/$scriptname"; then
        dir=/usr/share/polkit-1/actions
        if ! [[ -e $dir/nl.karelzimmer.$scriptname.policy ]]; then
            msg_error "$(eval_gettext "PolicyKit action definition file \
\$dir/nl.karelzimmer.\$scriptname.policy not found.")"
            error_flag=true
        fi
    fi

    # Tab-completion script.
    dir=/usr/share/bash-completion/completions
    if ! [[ -e $dir/$scriptname ]]; then
        msg_error "$(eval_gettext "Tab completion script \$dir/\$scriptname \
not found.")"
        error_flag=true
    fi

    # Manual page (EN + NL).
    dir=/usr/share/man/man1
    if ! [[ -e $dir/$scriptname.1.gz ]]; then
        msg_error "$(eval_gettext "Manual \$dir/\$scriptname.1.gz not found.")"
        error_flag=true
    fi
    dir=/usr/share/man/nl/man1
    if ! [[ -e $dir/$scriptname.1.gz ]]; then
        msg_error "$(eval_gettext "Manual \$dir/\$scriptname.1.gz not found.")"
        error_flag=true
    fi
}


# This function controls the termination of the script.
function term_script {
    if $error_flag; then
        exit $ERROR
    else
        exit $OK
    fi
}


###############################################################################
# Main Script
###############################################################################

function main {
    init_script "$@"
    check_input "$@"
    process_input
    term_script
}

main "$@"
