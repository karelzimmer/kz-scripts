#!/usr/bin/env bash
# shellcheck source=kz_common.sh
###############################################################################
# Install apps.
#
# This script installs apps and changes system settings.
#
# Written by Karel Zimmer <info@karelzimmer.nl>, CC0 1.0 Universal
# <https://creativecommons.org/publicdomain/zero/1.0>, 2009-2023.
###############################################################################

###############################################################################
# Import
###############################################################################

PROGRAM_PATH=$(cd "$(dirname "$(realpath "$0")")" && pwd)
readonly PROGRAM_PATH
source "$PROGRAM_PATH"/kz_common.sh 2> >(systemd-cat) || exit 1


###############################################################################
# Constants
###############################################################################

readonly PROGRAM_NAME='kz-install'
PROGRAM_DESC=$(gettext 'Install apps')
readonly PROGRAM_DESC
readonly DISPLAY_NAME=${PROGRAM_NAME/kz-/kz }

USAGE=$(eval_gettext "Usage: \$DISPLAY_NAME [-a|--apps] [-c|--cat] \
[-f|--file FILE] [-g|--gui]
                  [-l|--list] [-r|--remove] [--server] [-s|--simulate]
                  \$OPTIONS_USAGE
                  [--] [APP...]")
readonly USAGE
HELP="$(eval_gettext "Usage: \$DISPLAY_NAME [OPTION...] [APP...]")

$PROGRAM_DESC.

$(gettext 'Options:')
  -a, --apps     $(gettext 'show list of available apps')
  -c, --cat      $(gettext 'show contents of commands file')
$(gettext '  -f, --file FILE
                 process FILE')
  -g, --gui      $(gettext 'starts in graphics mode')
  -l, --list     $(gettext 'show list of standard files')
  -r, --remove   $(gettext 'delete apps')
      --server   $(gettext 'install apps for a server')
  -s, --simulate $(gettext 'show commands')
$OPTIONS_HELP
  --             $(gettext "signals the end of options and disables further \
option processing")

$(gettext 'Arguments:
  APP            install APPs')"
readonly HELP
readonly X_OPTIONS_SHORT='acf:lgrs'
readonly X_OPTIONS_LONG=',apps,cat,file:,list,gui,remove,server,simulate'

CMDS_FILE=$(mktemp -t "$PROGRAM_NAME-cmds-XXXXXXXXXX")
readonly CMDS_FILE
SIMS_FILE=$(mktemp -t "$PROGRAM_NAME-sims-XXXXXXXXXX")
readonly SIMS_FILE


###############################################################################
# Variables
###############################################################################

declare -a app_arguments=()
declare argument_app=false
declare commands_found=false
declare distro=''
declare edition='desktop'
declare execute_commands=true
declare file_argument=''
declare mode='install'
declare option_apps=false
declare option_cat=false
declare option_file=false
declare option_list=false
declare option_gui=false
declare option_remove=false
declare option_simulate=false


###############################################################################
# Functions
###############################################################################

# This function handles the options and arguments.
function check_input {
    local -i app_arg_num=0
    local -i rc=0
    local parsed=''

    parsed=$(
        getopt  --alternative                                       \
                --options       "$OPTIONS_SHORT$X_OPTIONS_SHORT"    \
                --longoptions   "$OPTIONS_LONG$X_OPTIONS_LONG"      \
                --name          "$DISPLAY_NAME"                     \
                --              "$@"
        ) || rc=$?
    if [[ $rc -ne $OK ]]; then
        printf '%s\n' "$USAGE_LINE"
        exit $ERROR
    fi
    eval set -- "$parsed"
    process_option "$@"

    while true; do
        case $1 in
            -a|--apps)
                option_apps=true
                shift
                ;;
            -c|--cat)
                option_cat=true
                shift
                ;;
            -f|--file)
                if $option_file; then
                    printf  "$DISPLAY_NAME: $1 $2: %s\n$USAGE_LINE\n" \
                            "$(gettext 'too many options')"
                    exit $ERROR
                fi
                option_file=true
                file_argument=$2
                shift 2
                ;;
            -l|--list)
                option_list=true
                shift
                ;;
            -g|--gui)
                option_gui=true
                reset_terminal_attributes
                shift
                ;;
            -r|--remove)
                option_remove=true
                mode='remove'
                shift
                ;;
            --server)
                edition=server
                shift
                ;;
            -s|--simulate)
                option_simulate=true
                execute_commands=false
                shift
                ;;
            --)
                shift
                break
                ;;
            *)
                shift
                ;;
        esac
    done

    # Check arguments.
    while [[ -n "$*" ]]; do
        argument_app=true
        app_arguments[app_arg_num]=$1
        ((++app_arg_num))
        shift
    done
}


# This function processes the input.
function process_input {
    local input_file=''

    if $option_file; then
        if ! [[ "$(basename "$file_argument")" == $PROGRAM_NAME-* ]]; then
            text=$(eval_gettext "File name must start with '\$PROGRAM_NAME-'.")
            warning "$text"
            exit $ERROR
        fi
        input_file=$file_argument
    else
        distro=$(lsb_release --id --short | tr '[:upper:]' '[:lower:]')
        input_file=$PROGRAM_PATH/$PROGRAM_NAME-$mode-$distro-$edition.sh
    fi
    if ! [[ -f $input_file ]]; then
        text=$(eval_gettext "No install file found, looked for \$input_file.")
        warning "$text"
        exit $ERROR
    fi

    if $argument_app; then
        process_argument_app
    else
        process_input_file
    fi

    if $option_apps; then
        process_option_apps
        exit $OK
    elif $option_cat; then
        process_option_cat
        exit $OK
    elif $option_list; then
        process_option_list
        exit $OK
    fi

    if $execute_commands; then
        check_user_root
        check_on_ac_power
    fi

    if $execute_commands && $option_gui; then
        title=$(gettext 'Install apps')
        text=$(gettext 'Prepare to install')
        # With '|& zenity --progress' global variables from called functions
        # are not passed, hence the process substitution with '> >(zenity...)'.
        process_cmds_file > >(
            zenity  --progress              \
                    --pulsate               \
                    --auto-close            \
                    --no-cancel             \
                    --width     700         \
                    --height    50          \
                    --title     "$title"    \
                    --text      "$text"     2> >($logcmd)
            )
    else
        process_cmds_file
    fi
}


# This function processes argument APP.
function process_argument_app {
    local app_not_found=false
    local app_argument=''

    for app_argument in "${app_arguments[@]}"; do
        process_argument_app_input_file
    done
    if $app_not_found; then
        text=$(eval_gettext "Type '\$DISPLAY_NAME --apps' for available apps.")
        printf "%s\n" "$text"
        exit $ERROR
    fi
}


# This function generates the temporary commands file from the input file,
# filtering on HOST and APPs.
function process_argument_app_input_file {
    local app_host_match=false
    local app_match=false
    local app_record=''
    local no_app_host_match=true
    local input_record=''

    while read -r input_record; do
        case $input_record in
            '#'*' APP '*)
                # App record.
                app_match=false
                app_record=''
                app_host_match=false
                if [[ $input_record == *' '$app_argument ]]; then
                    app_match=true
                    app_record=$input_record
                fi
                ;;
            '#'*' HOST '*'*'*|'#'*' HOST '*"$HOSTNAME"*)
                # Host record.
                app_host_match=false
                if $app_match; then
                    app_host_match=true
                    no_app_host_match=false
                    {
                        printf '%s\n' "$app_record"
                        printf '%s\n' "$input_record"
                    } >> "$CMDS_FILE"
                    app_record=''
                fi
                ;;
            *)
                # Other record (comment or command).
                if $app_match && $app_host_match; then
                    printf '%s\n' "$input_record" >> "$CMDS_FILE"
                fi
                ;;
        esac
    done < "$input_file"
    if $no_app_host_match; then
        app_not_found=true
        printf  "$DISPLAY_NAME: %s: %s\n"   \
                "$app_argument"             \
                "$(gettext 'app not found')"
    fi
}


# This function generates the temporary commands file from the input file,
# filtering on HOST.
function process_input_file {
    local app_record=''
    local app_host_match=false
    local input_record=''

    while read -r input_record; do
        case $input_record in
            '#'*' APP '*)
                # App record.
                app_record=$input_record
                app_host_match=false
                ;;
            '#'*' HOST '*'*'*|'#'*' HOST '*"$HOSTNAME"*)
                # Host record.
                app_host_match=true
                {
                    printf '%s\n' "$app_record"
                    printf '%s\n' "$input_record"
                } >> "$CMDS_FILE"
                app_record=''
                ;;
            *)
                # Other record (emtpy, comment, or command).
                if $app_host_match; then
                    printf '%s\n' "$input_record" >> "$CMDS_FILE"
                fi
                ;;
        esac
    done < "$input_file"
}


# This function shows the available APPs from the input file.
function process_option_apps {
    text="$(gettext 'The following APPs are available:

     APP')
$(
    if !    grep    --no-messages           \
                    --regexp='#.* APP '     \
                    "$CMDS_FILE"             |
            tr      --squeeze-repeats       \
                    '[:space:]'             |
            cut     --delimiter=' '         \
                    --fields=3              |
            sort    --unique                |
            nl      --number-width=2        \
                    --number-format=rn      \
                    --number-separator='] ' \
                    --body-numbering=a      |
            sed     --expression='s/^/[/'; then
        printf '%s\n' "$(gettext '     0   No apps found.')

$USAGE_LINE"
    else
        printf '%s\n' "
$(gettext 'To install the APPs run:') ${blue}$DISPLAY_NAME APP...${normal}
$(gettext 'To simulate installing APPs execute:') ${blue}$DISPLAY_NAME \
--simulate APP...${normal}
$(gettext 'To view the contents of the APPs installation file execute:') \
${blue}$DISPLAY_NAME --cat APP...${normal}"
    fi
)"
    info "$text"
}


# This function displays the contents of the temporary commands file.
function process_option_cat {
    less --quit-if-one-screen "$CMDS_FILE"
}


# This function displays a list of available input files.
function process_option_list {
    text="$(gettext 'The following FILEs are available:

     FILE')
$(
    if !    find    "$PROGRAM_PATH/$PROGRAM_NAME-"*'.sh'    \
                    2> >($logcmd)                           |
            nl      --number-width=2                        \
                    --number-format=rn                      \
                    --number-separator='] '                 \
                    --body-numbering=a                      |
            sed     --expression='s/^/[/'; then
        printf '%s\n' "$(gettext '     0 No files present.')

$USAGE_LINE"
    else
        printf '%s\n' "
$(eval_gettext "To process FILE execute: \${blue}\$DISPLAY_NAME \
--file FILE\${normal}")
$(eval_gettext "To view the commands of FILE execute: \${blue}\$DISPLAY_NAME \
--cat --file FILE\${normal}")
$(eval_gettext "To simulate the processing of FILE execute: \
\${blue}\$DISPLAY_NAME --simulate --file FILE\${normal}")"
    fi
)"
    info "$text"
}


# This function reads commands from the temporary commands file.
function process_cmds_file {
    local app_name=''
    local operation
    operation=$(gettext 'install')
    local cmds_record=''
    local write_app_line=true
    local -i app_seq_num=0
    local -i app_tot_num=0
    local -i cmd_seq_num=0

    app_tot_num=$(
        grep --word-regexp --regexp='#.*APP' --count "$CMDS_FILE" || true
        )
    if [[ $app_tot_num -gt 99 ]]; then
        app_tot_num=99
    fi

    if $option_remove; then
        operation=$(gettext 'remove')
    fi
    if $option_simulate; then
        operation+=$(gettext ' simulate')
    fi

    while read -r cmds_record; do
        case $cmds_record in
            '')
                # Empty line.
                continue
                ;;
            '#'*' APP '*)
                # App record.
                app_name="$(
                    printf '%s\n' "$cmds_record"             |
                    tr --squeeze-repeats '[:space:]'    |
                    cut --delimiter=' ' --fields=3)"
                write_app_line=true
                ((++app_seq_num))
                if [[ $app_seq_num -gt 99 ]]; then
                    app_seq_num=99
                fi
                cmd_seq_num=0
                ;;
            '#'*' HOST '*)
                # Host record.
                continue
                ;;
            '#'*)
                # Comment record.
                continue
                ;;
            *)
                # Command record.
                process_command_record "$cmds_record"
                ;;
        esac
    done < "$CMDS_FILE"
}


# This function prepares or simulates a command from the temporary commands
# file.
function process_command_record {
    local cmd=${1:-unknown}
    local app_name_line=''

    commands_found=true
    ((++cmd_seq_num))
    if [[ $cmd_seq_num -gt 99 ]]; then
        cmd_seq_num=99
    fi

    if $execute_commands; then
        if $option_gui; then
            text="#[$app_seq_num/$app_tot_num] $app_name $operation\n\n$cmd"
            printf '%s\n' "$text"
        fi
        printf  -v app_name_line            \
                "[%2d/%-2d] [%2d] %s %s"    \
                "$app_seq_num"              \
                "$app_tot_num"              \
                "$cmd_seq_num"              \
                "$app_name"                 \
                "$operation"
        execute_command "$cmd"
    else
        # Option simulate.
        if $write_app_line; then
            printf  '\n[%2d/%-2d] %s %s\n'  \
                    "$app_seq_num"          \
                    "$app_tot_num"          \
                    "$app_name"             \
                    "$operation"            >> "$SIMS_FILE"
            write_app_line=false
        fi
        printf  "%7s [%2d] ${blue}%s${normal}\n"    \
                " "                                 \
                "$cmd_seq_num"                      \
                "$cmd"                              >> "$SIMS_FILE"
    fi
}


# This function executes a command from the temporary commands file.
function execute_command {
    local cmd=${1:-unknown}
    local -i rc=0

    if ! $option_gui; then
        if [[ $cmd_seq_num -eq 1 ]]; then
            printf "%b\n" "$app_name_line"
        else
            printf "       %b\n" "${app_name_line:7}"
        fi
    fi

    log "$app_name_line"
    log "${blue}$cmd${normal}"
    check_dpkgd_snapd
    eval "$cmd" |& $logcmd || rc=$?
    maxrc
    # Extra message to the terminal, other is in the log.
    if ! $option_gui && [[ $rc -gt $OK ]]; then
        info "$(eval_gettext "Program \$PROGRAM_NAME encountered an error.")"
    fi
    log "rc=$rc, maxrc=$maxrc"
}


# This function controls the termination of the script.
function term_script {
    local operation
    operation=$(gettext 'install')

    if ! $commands_found; then
        info "$(gettext 'No commands to execute.' )"
    elif $execute_commands; then
        if [[ $maxrc -ne $OK ]]; then
            error "$(eval_gettext "One or more commands went wrong.
The maximum exit value is \$maxrc.
Check the log in the next screen.")"
            show_log
            exit $ERROR
        else
            if $option_remove; then
                # shellcheck disable=SC2034
                operation=$(gettext 'remove')
            fi
            info "
${green}$(eval_gettext "Apps \$operation completed.")${normal}"
        fi
    else
        # Option simulate.
        less --quit-if-one-screen --RAW-CONTROL-CHARS "$SIMS_FILE"
    fi
    exit $OK
}


###############################################################################
# Main Script
###############################################################################

function main {
    init_script "$@"
    check_input "$@"
    process_input
    term_script
}

main "$@"
