#!/usr/bin/env bash
# shellcheck shell=bash source=kz_common.sh
###############################################################################
# SPDX-FileComment: Download and install package kz
#
# SPDX-FileCopyrightText: Karel Zimmer <info@karelzimmer.nl>
# SPDX-License-Identifier: CC0-1.0
###############################################################################


###############################################################################
# Imports
###############################################################################

declare KZ_COMMON_GITHUB_FILE='https://raw.githubusercontent.com/karelzimmer/'
        KZ_COMMON_GITHUB_FILE+='kz-scripts/main/usr/bin/kz_common.sh'
declare KZ_COMMON_LOCAL_FILE
        KZ_COMMON_LOCAL_FILE=$(mktemp -t "kz_common-XXXXXXXXXX.sh")
wget    --output-document="$KZ_COMMON_LOCAL_FILE" $KZ_COMMON_GITHUB_FILE |&
        systemd-cat --identifier=kz-deb --priority=debug
source  "$KZ_COMMON_LOCAL_FILE" 2> >(
        systemd-cat --identifier=kz-deb --priority=debug)


###############################################################################
# Variables
###############################################################################

declare PROGRAM_NAME='kz-deb'
declare PROGRAM_DESC
        PROGRAM_DESC=$(gettext 'Download and install package kz')
declare DISPLAY_NAME=${PROGRAM_NAME/kz-/kz }

declare USAGE
        USAGE=$(eval_gettext "Usage: \$DISPLAY_NAME \$OPTIONS_USAGE")

declare HELP
        HELP="$(eval_gettext "Usage: \$DISPLAY_NAME [OPTION...]")

$PROGRAM_DESC.

$(gettext 'Options:')
$OPTIONS_HELP"

declare KZ_DEB_LOCAL_FILE=''


###############################################################################
# Functions
###############################################################################

# This function handles the script options and arguments.
function check_input() {
    local PARSED=''

    PARSED=$(
        getopt  --alternative                       \
                --options       "$OPTIONS_SHORT"    \
                --longoptions   "$OPTIONS_LONG"     \
                --name          "$DISPLAY_NAME"     \
                --              "$@"
        ) || RC=$?
    if [[ $RC -ne $OK ]]
    then
        infomsg "$USAGE"
        exit $ERROR
    fi
    eval set -- "$PARSED"

    process_options   "$@"
    process_x_options "$@"
}


# This function handles the extra options and arguments.
function process_x_options() {
    while true
    do
        case $1 in
            -- )
                shift
                break
                ;;
            * )
                shift
                ;;
        esac
    done

    if [[ -n $* ]]
    then
        TEXT="$DISPLAY_NAME: $*: $(gettext 'arguments are not allowed')
$USAGE"
        infomsg "$TEXT"
        exit $ERROR
    fi
}


# This function processes the script options and arguments.
function process_input() {
    become_root_check || exit $OK
    check_on_ac_power
    prepare_processing
    download_package
    install_package
}


# This function prepares further processing.
function prepare_processing() {
    KZ_DEB_LOCAL_FILE=$(mktemp -t "$PROGRAM_NAME-XXXXXXXXXX.deb")

    sudo true

    # Ubuntu 18.04: No such file or directory: '/usr/bin/bash' ==> symlink.
    [[ -e /usr/bin/bash ]] || sudo ln --symbolic /bin/bash /usr/bin/bash

    # Progress indicator with growing '[=>', '[==>', etc. as long as the local
    # Debian package file exists, i.e. installation is in progress.
    # If something fails, kz_common.sh will remove the local Debian package
    # file and other files upon exit.
    printf '[ '
    while test -e "$KZ_DEB_LOCAL_FILE"
    do
        printf '\b%s' '=>'
        sleep 1
    done &
}


# This function downloads package kz.
function download_package() {
    local   KZ_DEB_SITE_FILE='https://karelzimmer.nl/assets/kz-deb/'
            KZ_DEB_SITE_FILE+='kz_4.2.1_all.deb'

    logmsg  'Download package kz...'
    wget    --output-document="$KZ_DEB_LOCAL_FILE"  \
            "$KZ_DEB_SITE_FILE"                     |& $LOGCMD
}


# This function installs package kz.
function install_package() {
    local INSTALL_SUGGESTS=''

    logmsg 'Install package kz...'
    if $DESKTOP_ENVIRONMENT
    then
        INSTALL_SUGGESTS='--install-suggests'
    fi

    check_package_manager |& $LOGCMD

    # Ubuntu 18.04: E: Invalid operation reinstall ==> 'install --reinstall'.
    # Debian 11: .deb' uses unknown compression ==> ' || install_package_xz'.
    sudo    DEBIAN_FRONTEND=noninteractive  \
            apt-get                         \
            install                         \
            --reinstall                     \
            $INSTALL_SUGGESTS               \
            --yes                           \
            "$KZ_DEB_LOCAL_FILE"            |& $LOGCMD || install_package_xz

    # Progress indicator with '[=>', '[==>', etc. ends like '[===>]100%'.
    printf '%s\n' ']100%'
}


# This function installs repackaged kz.
function install_package_xz() {
    local KZ_DEB_LOCAL_FILE_XZ

    KZ_DEB_LOCAL_FILE_XZ=$(mktemp -ut "$PROGRAM_NAME-XXXXXXXXXX.deb")

    logmsg 'Try installing package kz that uses xz by repackaging it.'

    logmsg 'Install required packages...'
    sudo    apt-get install --yes binutils zstd     |& $LOGCMD
    logmsg 'Extract files from the archive...'
    ar      -xv --output=/tmp "$KZ_DEB_LOCAL_FILE"  |& $LOGCMD
    logmsg 'Uncompress zstd files an re-compress them using xz...'
    zstd    --uncompress < /tmp/control.tar.zst     |
    xz      --compress   > /tmp/control.tar.xz      |& $LOGCMD
    zstd    --uncompress < /tmp/data.tar.zst        |
    xz      --compress   > /tmp/data.tar.xz         |& $LOGCMD
    logmsg 'Re-create the package...'
    ar      -mcav sdsd                              \
            "$KZ_DEB_LOCAL_FILE_XZ"                 \
            /tmp/debian-binary                      \
            /tmp/control.tar.xz                     \
            /tmp/data.tar.xz                        |& $LOGCMD
    logmsg "Install the package..."
    sudo    DEBIAN_FRONTEND=noninteractive          \
            apt-get                                 \
            reinstall                               \
            $INSTALL_SUGGESTS                       \
            --yes                                   \
            "$KZ_DEB_LOCAL_FILE_XZ"                 |& $LOGCMD
    logmsg 'Delete kz deb xz files...'
    rm       --verbose                              \
            /tmp/debian-binary                      \
            /tmp/control.tar.xz                     \
            /tmp/data.tar.xz                        \
            /tmp/control.tar.zst                    \
            /tmp/data.tar.zst                       \
            "$KZ_DEB_LOCAL_FILE_XZ"                 |& $LOGCMD
}


# This function controls the termination of the script.
function term_script() {
    TEXT="
$(gettext "Package kz has been successfully installed.

Now follow the steps as described in the Checklist installation.

Checklist installation can be found on https://karelzimmer.nl/en, under \
Linux.")"
    if $DESKTOP_ENVIRONMENT
    then
        TEXT+="

$(gettext "Type 'exit' to close this window.")"
    fi
    infomsg "$TEXT"

    logmsg "Delete kz deb files ($PROGRAM_NAME)..."

    rm  --force                 \
        --verbose               \
        deb                     \
        deb.{1..99}             \
        "$KZ_DEB_LOCAL_FILE"    \
        "$KZ_COMMON_LOCAL_FILE" |& $LOGCMD

    exit $OK
}


###############################################################################
# Main
###############################################################################

function main() {
    init_script "$@"
    check_input "$@"
    process_input
    term_script
}

main "$@"
